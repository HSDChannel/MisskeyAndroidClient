<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="デザイン">
        <ListPreference
            app:defaultValue="light"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="テーマ"
            app:useSimpleSummaryProvider="true"/>
        <Preference
                app:title="タブを編集"
                app:key="tab"
                />

    </PreferenceCategory>

    <PreferenceCategory app:title="タイムライン">
        <SwitchPreference
                app:key="timeline_auto_load"
                app:title="自動読み込み"
                app:defaultValue="true"
            />
        <SwitchPreference
                app:key="include_removed_note"
                app:title="削除されたノートを表示し続ける"
                app:defaultValue="false"
                />
        <SwitchPreference
            app:key="includeMyRenotes"
            app:title="自分の行ったRenoteをタイムラインに表示する"
            app:defaultValue="true"/>

        <SwitchPreference
            app:key="includeRenotedMyNotes"
            app:title="自分の投稿のRenoteをタイムラインに表示する"
            app:defaultValue="true"/>
        <SwitchPreference
            app:key="includeLocalRenotes"
            app:title="ローカルの投稿のRenoteをタイムラインに表示する"
            app:defaultValue="true"/>





    </PreferenceCategory>

</PreferenceScreen>
