<resources>

    <declare-styleable name="MyMaterialDesign">
        <!--<attr name="colorPrimaryVariant" format="color"/>-->
        <!--<attr name="colorSecondaryVariant" format="color"/>-->
        <attr name="colorSurface" format="color" />
        <!--<attr name="colorOnPrimary" format="color"/>
        <attr name="colorOnSecondary" format="color"/>
        <item name="colorOnError" format="color"/>
        <item name="colorOnSurface" format="color"/>
        <item name="scrimBackground" format="color"/>-->
        <attr name="colorNormalReactionCounterBackground" format="color" />
        <attr name="colorSelectedReactionCounterBackground" format="color" />

        <attr name="colorBottomNavigationSelected" format="color" />
        <attr name="colorBottomNavigationNotSelect" format="color" />

        <attr name="colorNoteActionButtonTint" format="color" />

        <attr name="colorMessageSelf" format="color" />
        <attr name="colorMessageRecipient" format="color" />

        <attr name="colorSeparator" format="color" />

        <attr name="colorDotTabNormal" format="color" />
        <attr name="colorDotTabSelected" format="color" />

    </declare-styleable>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#3F51B5</item>
        <item name="colorSecondary">#575DAE</item>




        <item name="actionBarSize">53dp</item>

        <item name="colorNormalReactionCounterBackground">@color/colorNormalReaction</item>
        <item name="colorSelectedReactionCounterBackground">#808EDD</item>
        <item name="colorBottomNavigationSelected">@color/colorItemSelected</item>
        <item name="colorBottomNavigationNotSelect">@color/colorItemNotSelected</item>

        <item name="colorNoteActionButtonTint">@color/colorItemNotSelected</item>
        <item name="colorMessageSelf">#808EDD</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipient</item>

        <item name="colorSeparator">@color/colorSeparator</item>

        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.Toolbar</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>



        <item name="android:navigationBarColor">@color/navigationColor</item>

        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="materialAlertDialogTheme">@style/DialogStyle</item>



        <item name="colorDotTabSelected">@color/colorDarkAccent</item>
        <item name="colorDotTabNormal">@color/colorItemNotSelected</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="colorPrimary">#9FA8DA</item>
        <item name="colorSecondary">#6D7FE1</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.PrimarySurface</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView4Dark</item>

        <item name="android:windowBackground">@color/colorDarkWindowBackground</item>

        <item name="colorSurface">#1E1E1E</item>

        <item name="colorNoteActionButtonTint">@color/colorDarkTextColor</item>
        <item name="actionBarSize">53dp</item>

        <item name="colorNormalReactionCounterBackground">#3A3A3A</item>
        <item name="colorSelectedReactionCounterBackground">#3F51B5</item>

        <item name="colorMessageSelf">@color/colorMessageSelfDark</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipientDark</item>
        <item name="colorSeparator">@color/colorSeparatorDark</item>

        <item name="android:navigationBarColor">@color/navigationDarkColor</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="materialAlertDialogTheme">@style/DialogStyle</item>
        <item name="colorDotTabSelected">@color/colorDarkAccent</item>
        <item name="colorDotTabNormal">@color/colorDarkTextColor</item>
    </style>

    <style name="AppThemeBlack" parent="AppThemeDark">
        <item name="android:windowBackground">@color/colorBlackPrimary</item>
        <item name="colorSurface">#000000</item>

        <item name="colorNoteActionButtonTint">@color/colorItemNotSelected</item>
        <item name="actionBarSize">53dp</item>

        <item name="colorMessageSelf">@color/colorMessageSelf</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipient</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="android:navigationBarColor">@color/colorBlackPrimary</item>


    </style>

    <style name="AppThemeBread" parent="AppTheme">
        <item name="colorPrimary">@color/colorBreadPrimary</item>
        <item name="colorPrimaryDark">@color/colorBreadPrimaryDark</item>
        <item name="colorSurface">@color/colorBreadSurface</item>
        <item name="colorSecondary">@color/colorBreadAccent</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Primary</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface</item>

    </style>


    <style name="ReactionTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>
    <style name="LicensePageTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- カーソルの色を変更している -->
        <item name="colorControlActivated">?attr/colorAccent</item>

        <!-- boxStrokeColorが選択時にcolorPrimaryを参照しているのでここで変更している -->
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColorPrimary">?attr/colorAccent</item>
    </style>

    <style name="NotificationSnackBarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/colorTextColorPrimary</item>
    </style>

    <style name="BottomNavigationView4Dark" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="elevation">0dp</item>
    </style>
    <style name="TabLayout4Light" parent="Widget.MaterialComponents.TabLayout">
        <item name="elevation">4dp</item>

    </style>
</resources>
