<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
                name="fileViewData"
                type="jp.panta.misskeyandroidclient.viewmodel.drive.file.FileViewData" />
        <variable
                name="fileViewModel"
                type="jp.panta.misskeyandroidclient.viewmodel.drive.file.FileViewModel" />
        <variable
                name="driveViewModel"
                type="jp.panta.misskeyandroidclient.viewmodel.drive.DriveViewModel" />
        <import type="jp.panta.misskeyandroidclient.view.SafeUnbox" />
    </data>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="0dp"

            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                >

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                <FrameLayout
                        android:id="@+id/thumbnail_view"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginEnd="8dp"
                        fileThumbnailMain="@{thumbnailMain}"
                        fileThumbnailMask="@{thumbnailMask}"
                        thumbnailFileViewData="@{fileViewData}"
                        android:onClick="@{()-> driveViewModel.openFile(fileViewData.fileProperty)}"
                        >
                    <ImageView
                            android:id="@+id/thumbnailMain"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            tools:ignore="ContentDescription" />
                    <ImageView
                            android:id="@+id/thumbnailMask"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            tools:srcCompat="@drawable/ic_play_circle_outline_black_24dp"
                            tools:ignore="ContentDescription" />

                </FrameLayout>


                <androidx.emoji.widget.EmojiTextView
                        android:id="@+id/file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/thumbnail_view"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="fileName"
                        android:text="@{fileViewData.fileProperty.name}" />

                <androidx.emoji.widget.EmojiTextView
                        android:id="@+id/file_meta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/file_name"
                        android:layout_toEndOf="@+id/thumbnail_view"
                        tools:text="image/jpg"
                        android:text="@{fileViewData.fileProperty.type}"

                        />

                <androidx.emoji.widget.EmojiTextView
                        android:id="@+id/file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/file_name"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/file_meta"
                        tools:text="24byte"
                        android:text="@{String.valueOf(fileViewData.fileProperty.size)}"
                        />

                <androidx.emoji.widget.EmojiTextView
                        android:id="@+id/updated_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/file_name"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/file_size"
                        android:visibility="gone"
                        tools:text="updated 3 hour" />
            </RelativeLayout>

            <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility='@{SafeUnbox.unboxBool(fileViewModel.selectableMode) ? View.VISIBLE : View.GONE }'
                    android:onClick='@{()-> fileViewModel.toggleSelect(fileViewData.fileProperty.id) }'
                    android:checked="@{SafeUnbox.unboxBool(fileViewData.isSelected)}"
                    android:enabled="@{SafeUnbox.unboxBool(fileViewData.isEnabled)}"
                    />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>
