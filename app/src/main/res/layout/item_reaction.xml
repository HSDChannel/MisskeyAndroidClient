<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="in"
                type="java.lang.String" />
        <variable
                name="reaction"
                type="kotlin.Pair&lt;java.lang.String, java.lang.Integer>" />
        <variable
                name="note"
                type="jp.panta.misskeyandroidclient.viewmodel.notes.PlaneNoteViewData" />
    </data>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            app:reactionImageView="@{reactionImage}"
            app:reactionStringView="@{reactionText}"
            app:reaction="@{reaction}"
            android:layout_marginEnd="5dp"
            tools:background="@drawable/shape_normal_reaction_backgruond"

            android:background='@{note.myReaction == reaction.first ? @drawable/shape_selected_reaction_background : @drawable/shape_normal_reaction_backgruond }'


            >
        <ImageView
                android:id="@+id/reactionImage"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="4dp"
                />
        <TextView
                android:id="@+id/reactionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ðŸ˜‡"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginEnd="4dp"
                android:textColor="#000000"

                />
        <TextView
                android:id="@+id/reaction_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20"
                android:text='@{reaction.second.toString()}'
                android:layout_gravity="center"
                android:textSize="15sp"

                />

    </LinearLayout>
</layout>
