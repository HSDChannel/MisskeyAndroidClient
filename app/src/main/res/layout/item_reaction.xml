<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="in"
                type="java.lang.String" />
        <variable
                name="reaction"
                type="kotlin.Pair&lt;java.lang.String, java.lang.Integer>" />
    </data>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            app:reactionImageView="@{reactionImage}"
            app:reactionStringView="@{reactionText}"
            app:reaction="@{reaction}"

            >
        <ImageView
                android:id="@+id/reactionImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />
        <TextView
                android:id="@+id/reactionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ðŸ˜‡"
                android:layout_gravity="center"
                android:textSize="15sp"

                />
        <TextView
                android:id="@+id/reaction_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20"
                android:text='@{reaction.second.toString()}'
                android:layout_gravity="center"
                android:textSize="15sp"

                />

    </LinearLayout>
</layout>
