<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="jp.panta.misskeyandroidclient.view.SafeUnbox"/>
        <variable
                name="followFollowerUser"
                type="jp.panta.misskeyandroidclient.viewmodel.users.FollowFollowerViewData" />
        <variable
                name="followFollowerViewModel"
                type="jp.panta.misskeyandroidclient.viewmodel.users.FollowFollowerViewModel" />

    </data>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="0dp"

            >

        <RelativeLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="16dp"
                >
            <TextView
                    android:id="@+id/followeeState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followee_state"
                    android:layout_toEndOf="@id/avatarIcon"
                    android:layout_marginBottom="8dp"
                    android:visibility="@{SafeUnbox.unbox(followFollowerUser.isFollowed) ? View.VISIBLE : View.GONE}"
                    />
            <ImageView
                    android:id="@+id/avatarIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    tools:srcCompat="@mipmap/ic_launcher"
                    app:circleIcon="@{SafeUnbox.unbox(followFollowerUser.user.avatarUrl)}"
                    android:layout_marginEnd="8dp"
                    android:layout_below="@id/followeeState"
                    android:onClick="@{()-> followFollowerViewModel.showUser(followFollowerUser) }"
                    tools:ignore="ContentDescription" />

            <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatarIcon"
                    android:text="@{SafeUnbox.unbox(followFollowerUser.user.displayUserName)}"
                    tools:text='"@"Panta@misskey.jp'
                    android:layout_toStartOf="@+id/followButton"
                    android:layout_below="@id/followeeState"
                />

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatarIcon"
                    tools:text="name"
                    app:emojis="@{followFollowerUser.user.emojis}"
                    app:clickableLink="@{false}"
                    app:text="@{SafeUnbox.unbox(followFollowerUser.user.name)}"
                    android:layout_toStartOf="@+id/followButton"
                    android:layout_below="@id/userName"
                    android:layout_marginBottom="8dp"
                    />
            <Button
                    android:id="@+id/followButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart='8dp'
                    android:layout_alignTop="@id/userName"
                    app:isFollowing="@{SafeUnbox.unbox(followFollowerUser.isFollowing)}"
                    android:onClick="@{()-> followFollowerViewModel.followOrUnfollow(followFollowerUser)}"
                    />
            <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_toEndOf="@id/avatarIcon"
                    tools:text="description"
                    app:emojis="@{followFollowerUser.user.emojis}"
                    app:clickableLink="@{true}"
                    app:text="@{SafeUnbox.unbox(followFollowerUser.user.description)}"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>

