<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#3F51B5</item>
        <item name="colorSecondary">#575DAE</item>

        <item name="actionBarSize">53dp</item>

        <item name="colorNormalReactionCounterBackground">@color/colorNormalReaction</item>
        <item name="colorSelectedReactionCounterBackground">#808EDD</item>
        <item name="colorBottomNavigationSelected">@color/colorItemSelected</item>
        <item name="colorBottomNavigationNotSelect">@color/colorItemNotSelected</item>

        <item name="colorNoteActionButtonTint">@color/colorItemNotSelected</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorMessageSelf">#808EDD</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipient</item>

        <item name="colorSeparator">@color/colorSeparator</item>

        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.Toolbar</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>



        <item name="android:navigationBarColor">@color/navigationColor</item>

        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="materialAlertDialogTheme">@style/DialogStyle</item>



        <item name="colorDotTabSelected">#575DAE</item>
        <item name="colorDotTabNormal">@color/colorItemNotSelected</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorOnPrimary">?android:textColorPrimary</item>

        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        -->
        <item name="colorPrimary">#9FA8DA</item>
        <item name="colorSecondary">#6D7FE1</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface</item>

        <item name="android:windowBackground">@color/colorDarkWindowBackground</item>
        <!--<item name="colorSurface">@color/colorDarkSurface</item>
        <item name="android:textColor">@color/colorDarkTextColor</item>
-->
        <item name="colorBottomNavigationSelected">@color/colorDarkBottomNavSelected</item>
        <item name="colorBottomNavigationNotSelect">@color/colorDarkBottomNavNormal</item>
        <item name="colorNoteActionButtonTint">@color/colorDarkTextColor</item>
        <item name="actionBarSize">53dp</item>

        <item name="colorNormalReactionCounterBackground">#3A3A3A</item>
        <item name="colorSelectedReactionCounterBackground">#3F51B5</item>

        <item name="colorMessageSelf">@color/colorMessageSelfDark</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipientDark</item>
        <item name="colorSeparator">@color/colorSeparatorDark</item>
        <item name="android:textColorPrimary">@color/colorTextColorPrimaryColorDarkDark</item>
        <item name="android:textColorSecondary">@color/colorTextColorSecondary</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/navigationDarkColor</item>


        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="materialAlertDialogTheme">@style/DialogStyle</item>
        <item name="colorDotTabSelected">@color/colorDarkAccent</item>
        <item name="colorDotTabNormal">@color/colorDarkTextColor</item>

    </style>
